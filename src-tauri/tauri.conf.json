{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "dashboard-ram",
  "version": "0.1.0",
  "identifier": "com.ram.dashboard",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:8050",
    "beforeBuildCommand": "python -m pyinstaller main.spec",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Dashboard RAM - Suivi des Vols",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ]
  }
}