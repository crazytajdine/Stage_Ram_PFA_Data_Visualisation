{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-dash-app",
  "version": "0.1.0",
  "identifier": "com.tauri.dash.app",
  "build": {
    "beforeDevCommand": "poetry install && poetry run python dashboard/main.py",
    "devUrl": "http://localhost:8050",
     "beforeBuildCommand": "poetry install && pyinstaller app.py --onefile --distpath dist",
    "frontendDist": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tauri + Dash App",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true
  }
}
