{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-dash-app",
  "version": "0.1.0",
  "identifier": "com.tauri.dash.app",
  
  "build": {
    "beforeDevCommand": "poetry run python dashboard/root.py",
    "devUrl": "http://localhost:8050",
    "beforeBuildCommand": "poetry run pyinstaller main.spec",
    "frontendDist": "../public"
    
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tauri + Dash App",
        "width": 1000,
        "height": 700,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  
  "bundle": {
    "active": true,
    
    "externalBin": [
      "../dist/server_dashboard"
    ],
    "icon": [
    "icons/icon.ico",   
    "icons/icon.icns", 
    "icons/32x32.png", 
    "icons/128x128.png"
  ]
  }
}
